.me {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #f3f3f3; 
}

.me-top {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 140rpx;
    margin-top: 40rpx; 
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: white;
}

.me-avatar {
    width: 110rpx;
    height: 110rpx;
}

.me-name {
    margin-left: 30rpx;
    font-size: 35rpx;
    color: #444;
}

.me-contact {
    position: fixed;
    right: 50rpx;
    bottom: 50rpx;
