.record-top {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 380rpx; 
  box-sizing: border-box;
  padding: 60rpx;
  box-shadow: 1px 1px 5px #eee;
  border-bottom: 1rpx solid #eee;
}

.record-joephon-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.record-top-name {
  font-size: 22rpx;
  color: #000;
}

.record-top-text {
  text-align: center;
  font-size: 28rpx;
  color: #555;
}

.record-icon {
    position: absolute;
    bottom: 100rpx;
    left: 50%;
    width: 200rpx;
    height: 200rpx;
    margin-left: -100rpx;
}

.record-duration {
    position: absolute;
    bottom: 320rpx;
    width: 100%;
    left: 0;  
    text-align: center;
    color: #222; 
}

.record-hint {
    position: absolute;
    bottom: 50rpx;
    width: 100%;
    left: 0;  
    font-size: 30rpx;
    text-align: center;
    color: #999; 
}

.record-hide {
    display: none;
}