.record-top {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 380rpx; 
  box-sizing: border-box;
  padding: 60rpx;
  box-shadow: 1px 1px 5px #eee;
  border-bottom: 1rpx solid #eee;
}

.record-joephon-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.record-top-name {
  font-size: 22rpx;
  color: #000;
}

.record-top-text {
  text-align: center;
  font-size: 28rpx;
  color: #555;
}

.record-option {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 100rpx;
}

.record-switch {
  margin-left: 20rpx
}

.record-label {
  font-size: 30rpx;
  color: #ccc;
}

.record-display {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;  
  width: 100%;
  height: 150rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.record-progress {
  width: 70%;
}

.record-play {
  width: 80rpx;
  height: 80rpx;
}

.record-time {
  color: #666;
}

.record-icon {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  margin-left: -100rpx;
}

.record-duration {
  position: absolute;
  bottom: 320rpx;
  width: 100%;
  left: 0;  
  text-align: center;
  color: #222; 
}

.record-hint {
  position: absolute;
  bottom: 50rpx;
  width: 100%;
  left: 0;  
  font-size: 30rpx;
  text-align: center;
  color: #999; 
}

.record-hide {
  display: none;
}