.home-list-item-voice-icon {

  height: 100%;
  width: 100%;
  padding-left:10rpx; 

  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
  background-position: center left;
  background-origin: content-box;

}

.list-voice-img-shake {
  animation-name: playVoice;
  animation-iteration-count: infinite;
  animation-duration: 1.4s;
}
@keyframes playVoice
{
    0%   {background-image: url('data:image/png;base64,');}
    33%  {background-image: url('data:image/png;base64,');}
    66%  {background-image: url('data:image/png;base64,');}
    100% {background-image: url('data:image/png;base64,');}
}

.home-list-item-voice-duration {
  margin-right: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #333;
}

.home-list-item-voice-dress {
  position: absolute;
  left: -6rpx;
  top: 30%;
  width: 18rpx;
  height: 18rpx;
  transform: rotate(40deg);
  background-color: #afe46e;
}

.go-record {
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  box-shadow: 1rpx 1rpx 1rpx 5rpx #eee;
  background-color: #f5f5f5;
}