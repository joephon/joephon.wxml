.home-list {
  /*margin-top: 300rpx;*/
}

.home-list-item {
  display: flex;
  width: 100%;
  padding-top: 30rpx;
  background-color: #f3f3f3;
}

.home-list-item-left {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-around;
}

.home-list-item-avatar {
  width: 70rpx;
  height: 70rpx;
  /*border-radius: 50%;*/
}

.home-list-item-right {
  flex: 5;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.home-list-item-voice {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  max-width: 380rpx !important;
  min-width: 120rpx !important;
  height: 70rpx;
  border-radius: 8rpx;
  background-color: #afe46e;
}

